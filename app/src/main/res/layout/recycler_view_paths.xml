<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@color/white"
        card_view:cardCornerRadius="3dp"
        card_view:cardElevation="3dp"
        card_view:contentPadding="@dimen/cardViewMargin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    fontPath="fonts/Ubuntu-light.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="POT:"
                    android:textColor="#cccccc"
                    android:textSize="10sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/path_name"
                    fontPath="fonts/Ubuntu-medium.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red_default"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    fontPath="fonts/Ubuntu-light.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="KRAJ:"
                    android:textColor="#cccccc"
                    android:textSize="10sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/path_city"
                    fontPath="fonts/Ubuntu-italic.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/darkGrey"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    fontPath="fonts/Ubuntu-light.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AVTOR_ICA:"
                    android:textColor="#cccccc"
                    android:textSize="10sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/path_owner"
                    fontPath="fonts/Ubuntu-light.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/darkGrey"
                    android:textSize="15sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/path_description"
                fontPath="fonts/Ubuntu-light.ttf"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="0"
                android:visibility="gone" />

            <TextView
                android:id="@+id/path_locations"
                fontPath="fonts/Ubuntu-light.ttf"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="0"
                android:visibility="gone" />

            <TextView
                android:id="@+id/path_id"
                fontPath="fonts/Ubuntu-light.ttf"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="0"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingTop="5dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/path_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ikona_prikazi_na_zemljevidu_small"
                android:paddingLeft="10dp"
                android:paddingTop="5dp" />

            <TextView
                android:id="@+id/path_num_of_locations"
                fontPath="fonts/Ubuntu-light.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="0dp"
                android:paddingLeft="6dp"
                android:paddingTop="15dp"
                android:textColor="@color/red_default"
                android:textSize="20sp" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>