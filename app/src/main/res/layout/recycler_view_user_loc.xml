<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@color/white"
        card_view:cardCornerRadius="3dp"
        card_view:cardElevation="3dp"
        card_view:contentPadding="@dimen/cardViewMargin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/loc_detail_title"
                fontPath="fonts/Ubuntu-medium.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="2dp"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:textColor="@color/darkGrey"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/locAddress"
                fontPath="fonts/Ubuntu-light.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/loc_detail_title"
                android:paddingLeft="3dp"
                android:paddingRight="64dp"
                android:textColor="@color/darkGrey"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/latitude"
                fontPath="fonts/Ubuntu-light.ttf"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_below="@id/locAddress"
                android:paddingLeft="4dp"
                android:textSize="12sp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/longtitude"
                fontPath="fonts/Ubuntu-light.ttf"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_below="@id/latitude"
                android:paddingLeft="2dp"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:textSize="12sp"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_below="@id/longtitude"
                android:layout_centerHorizontal="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <Button android:id="@+id/edit_icon"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/edit_location"
                    android:background="@color/colorPrimary"
                    android:layout_marginTop="5dp"
                    android:textColor="@android:color/white"/>


                <Button android:id="@+id/delete_loc_icon"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/delete_location"
                    android:background="@color/colorPrimary"
                    android:layout_marginTop="5dp"
                    android:textColor="@android:color/white"/>

            </LinearLayout>

            <TextView
                android:id="@+id/locIdentifier"
                fontPath="fonts/Ubuntu-light.ttf"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="0"
                android:text="0"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/locationText"
                fontPath="fonts/Ubuntu-light.ttf"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="0"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/loc_detail_name"
                fontPath="fonts/Ubuntu-light.ttf"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="0"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/picture_url"
                fontPath="fonts/Ubuntu-light.ttf"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="0"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/loc_owner"
                fontPath="fonts/Ubuntu-light.ttf"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="0"
                android:visibility="invisible" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>