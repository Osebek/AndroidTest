<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@color/white"
        card_view:cardCornerRadius="3dp"
        card_view:cardElevation="3dp"
        card_view:contentPadding="@dimen/cardViewMargin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/loc_detail_title"
                fontPath="fonts/Ubuntu-medium.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/darkGrey"
                android:textSize="20sp"
                tools:text="Ime lokacije" />

            <TextView
                android:id="@+id/locAddress"
                fontPath="fonts/Ubuntu-light.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/darkGrey"
                android:textSize="12sp"
                tools:text="Naslov" />

            <TextView
                android:id="@+id/latitude"
                fontPath="fonts/Ubuntu-light.ttf"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:textSize="12sp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/longtitude"
                fontPath="fonts/Ubuntu-light.ttf"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:textSize="12sp"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/locIdentifier"
                fontPath="fonts/Ubuntu-light.ttf"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="0"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/locationText"
                fontPath="fonts/Ubuntu-light.ttf"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="0"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/loc_detail_name"
                fontPath="fonts/Ubuntu-light.ttf"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="0"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/picture_url"
                fontPath="fonts/Ubuntu-light.ttf"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="0"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/loc_owner"
                fontPath="fonts/Ubuntu-light.ttf"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="0"
                android:visibility="invisible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="vertical"
            android:visibility="invisible">

            <ImageView
                android:id="@+id/location_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ikona_prikazi_na_zemljevidu_small" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>