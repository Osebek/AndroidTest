<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:padding="16dp"
        tools:context="com.example.nejcvesel.pazikjehodis.Fragments.LocationDetailFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/locationDetailTitle"
                fontPath="fonts/Ubuntu-medium.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/darkGrey"
                android:textSize="20sp"
                tools:text="Ime lokacije" />

            <TextView
                android:id="@+id/locationDetailName"
                fontPath="fonts/Ubuntu-light.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/darkGrey"
                android:textSize="12sp"
                tools:text="Naslov" />

            <ImageView
                android:id="@+id/locationDetailPicture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp" />

            <TextView
                android:id="@+id/locationDetailText"
                fontPath="fonts/Ubuntu-light.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/locationDetailTitle"
                android:paddingTop="5dp"
                tools:text="Ne vem" />

        </LinearLayout>

    </FrameLayout>

</ScrollView>
